{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "./types/*.ts",
    "./config/default.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
